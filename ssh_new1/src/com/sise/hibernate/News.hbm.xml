<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping package="com.sise.hibernate">
       <class name="News" table="news">
           <id name="id" type="integer">
               <generator class="native"/>
           </id>
           <property name="title"  length="12" not-null="true"/>
           <property name="content"  length="255" not-null="true"/>
            <property name="issueTime"  length="16" not-null="false"/>
           <many-to-one name="category" class="Category" column="category_id"  lazy="false" fetch="join"/>
       </class>
    </hibernate-mapping>

