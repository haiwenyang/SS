<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
"http://struts.apache.org/dtds/struts-2.5.dtd">
    
<struts>
	<package name="ssh_new1" extends="struts-default" namespace="/s2h">
	    <!-- 声明拦截器 -->
	    <interceptors>
			<interceptor name="authorty" class="com.hear.interceptoe.AuthorityInterceptor"/>
			<interceptor-stack name="myStack">
				<interceptor-ref name="defaultStack"/>
				<interceptor-ref name="authorty"/>
			</interceptor-stack>
		</interceptors>
		<global-results>
			<result name="login1">/WEB-INF/login.jsp</result>
		</global-results>
		<action name="*" class="com.hibernate.action.CategoryAction" method="{1}">
		      <!--  <interceptor-ref name="myStack"/>-->
		      <result name="list">/WEB-INF/category/categoryList1.jsp</result>
		      <result name="success" type="redirectAction">
		          <param name="actionName">listCategory</param>
		          <param name="namespace">/s2h</param>
		      </result>
		      <result name="success1">/WEB-INF/category/categoryList2.jsp</result>
              <result name="update">/WEB-INF/category/categoryUpdate1.jsp</result>
              <result name="add">/WEB-INF/index.jsp</result>
              <result name="add_input">/WEB-INF/new/addInput1.jsp</result>
              <result name="list1">/WEB-INF/new/listNews1.jsp</result>
              <result name="delSelectUsers">/WEB-INF/new/listNews1.jsp</result>
              <result name="list2">/WEB-INF/category/categoryList2.jsp</result>
              <result name="delete_news">/WEB-INF/index1.jsp</result> 
              <result name="update_input">/WEB-INF/new/newUpdate1.jsp</result>
              <result name="update_news">/WEB-INF/success1.jsp</result>
               <result name="login">/WEB-INF/left1.jsp</result>
                <result name="login1">/WEB-INF/login.jsp</result>
                <result name="addCategorys">/WEB-INF/left1.jsp</result>
                <result name="show">/WEB-INF/new/showNews.jsp</result>
                <result name="listpage">/WEB-INF/new/listNews3.jsp</result>
                <result name="show1">/WEB-INF/new/showNews1.jsp</result>
                 <result name="error">/WEB-INF/error.jsp</result>
                 <result name="user">/WEB-INF/new/listNews2.jsp</result>
                 <result name="select">/WEB-INF/new/listNews2.jsp</result>
                   <result name="findTime">/WEB-INF/new/listNews2.jsp</result>
              <!-- 在action中使用自定义拦截器 -->
             
           <allowed-methods>addCategory,updateCategory,updatedCategory,deleteCategory,listCategory,addNews,listNews,showNews,updateInput,updateNews,deleteNews,addInput,addUser,login,addCategorys,listNews1,showNews1,listCategory1,selectTitle,findTime,findNewsByCategoryname,listpage,delSelectUsers</allowed-methods>
		</action>
	</package>
</struts>